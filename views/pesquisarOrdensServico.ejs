    <script>
      /* função para ativar os botões da barra lateral, dropdownbtn*/

      var dropdown = document.getElementsByClassName("dropdown-btn");
      var i;
      for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function() {
          this.classList.toggle("active");
          var dropdownContent = this.nextElementSibling;
          if (dropdownContent.style.display === "block") {
            dropdownContent.style.display = "none";
          } else {
            dropdownContent.style.display = "block";
          }
        });
      }
    </script>

    <div class="conteudo">
      <div class="conteudoEsquerdoInventario">
        <form name="pesquisarOrdensServico" action="/pesquisarOrdensServico" method="post">
          <div class="mb-3">
            <label for="numeroOrdem" class="form-label" id="tituloOrdemServico">Número da ordem de serviço</label>
            <input type="number" class="form-control" name="numeroOrdem" id="tituloOrdem" maxlength="100" >
            <div id="ordemHelp" class="form-text">Insira o número da ordem de serviço</div>
          </div>

          <div class="mb-3">
            <label for="tituloPesquisaOrdem1" class="form-label" id="tituloOrdemServico">Título da ordem de serviço</label>
            <input type="text" class="form-control" name="tituloPesquisaOrdem" id="tituloPesquisaOrdem" maxlength="100">
            <div id="ordemHelp" class="form-text">Insira o título da ordem de serviço</div>
          </div>

          <div class="mb-3">
            <label for="maquinaOrdem" class="form-label">Máquina</label>

            <select class="form-select" name="maquinaOrdem" >
              <option value = "" selected>Selecione a máquina desejada</option>
              <option value="BT100">BT100</option>
              <option value="BT101">BT101</option>
              <option value="BT102">BT102</option>
              <option value="BT103">BT103</option>
              <option value="BT104">BT104</option>
            </select>
            <div id="maquinaOrdemHelp" class="form-text">Selecione a máquina que deseja pesquisar a OS.</div>
          </div>

          <div class="mb-3">
            <label for="statusOrdem" class="form-label">Status da OS:</label>
            <select class="form-select" name="statusOrdem" >
              <option value= "" selected>Selecione status da ordem de serviço</option>
              <option value="Aberta">Aberta</option>
              <option value="Em andamento">Em andamento</option>
              <option value="Fechada">Fechada</option>
            </select>
            <div id="statusOrdemHelp" class="form-text">Selecione o status da ordem que deseja pesquisar.</div>
          </div>
          <br>
          <br>
          <br>

          <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Pesquisar</button>
          <a href="paginaPrincipal" class="btn btn-primary"><i class="fas fa-long-arrow-alt-left"></i> Voltar</a>
          <button type="button" class="btn btn-primary" onclick="limparTodosCampos()"><i class="fas fa-eraser"></i> Limpar</button>


      </div>

      <div class="conteudoDireitoInventario">

        <div class="mb-3">

          <label for="setorOrdem" class="form-label">Setor</label>
          <select class="form-select" name="setorOrdem">
            <option value = "" selected>Selecione o setor desejado</option>
            <option value="Usinagem">Usinagem</option>
            <option value="Teste">Teste</option>
            <option value="Pintura">Pintura</option>

          </select>
          <div id="setorOrdemHelp" class="form-text">Insira o setor onde deseja realizar a OS.</div>

        </div>

        <div class="mb-3">

          <label for="dataOrdemAbertura" class="form-label">Data de abertura</label>
          <input type="date" class="form-control" name="dataOrdemAbertura" id="dataOrdemAbertura">
          <div id="dataOrdemHelp" class="form-text">Insira a data de abertura da ordem de serviço.</div>

        </div>

        <div class="mb-3">

          <label for="dataOrdemFechamento" class="form-label">Data de fechamento</label>
          <input type="date" class="form-control" name="dataOrdemFechamento" id="dataOrdemFechamento">
          <div id="dataOrdemHelp" class="form-text">Insira a data de fechamento da ordem de serviço.</div>

        </div>

          <div class="form-group">
            <div class="mb-3">
              <label class="form-label">Tipo de ordem: </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="preventiva" name="flexRadioDefault" id="ordemPreventiva">
              <label class="form-check-label" for="ordemPreventiva">
                Preventiva
              </label>
            </div>
            <br>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="corretiva" name="flexRadioDefault" id="ordemCorretiva">
              <label class="form-check-label" for="ordemCorretiva">
                Corretiva
              </label>
            </div>
            <br>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="emergencial" name="flexRadioDefault" id="ordemEmergencial" checked>
              <label class="form-check-label" for="ordemEmergencial">
                Emergencial
              </label>
            </div>
            <br>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="verificacao" name="flexRadioDefault" id="ordemVerificacao" checked>
              <label class="form-check-label" for="ordemVerificacao">
                Verificação
              </label>
            </div>
            <div class="containerBtnInventarioEdit">


            </div>
          </div>
      </div>
