<!DOCTYPE html>

<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Editar ordens de manutenção</title>
  <link rel="preconnect" href=https://fonts.googleapis.com>
  <link rel="preconnect" href=https://fonts.gstatic.com crossorigin>
  <link href=https://fonts.googleapis.com/css2?family=Montserrat:wght@100&display=swap rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
  <link href=https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
  <link rel="icon" href="images\favicon.ico">
  <script src=https://kit.fontawesome.com/cb4069a99b.js crossorigin="anonymous"></script>

</head>

<body class="paginaInicial">
  <!-- Seção cabeçalho que é utilizada em todas as telas internas do site-->
  <div class=containerTela>
    <!--barra de menu superior></!-->
    <div class="topnav">
      <span class="bemVindo">Ordens de serviço - Editar - Excluir</span>
      <a href="/paginaPrincipal"> <i class="fas fa-house-user"> </i> Página Inicial</a>
      <div class="topnav-right">
        <a href="/"> <i class="fas fa-sign-out-alt"></i> Sair</a>
      </div>
    </div>
    <!-- barra de menu lateral></!-->

    <div class="barraLateral">
      <div class="vertical-menu">
        <br>
        <a href="/relatorios">Relatórios</a>
        <button class="dropdown-btn">Ordens de serviço
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/criarOrdens">Criar ordens de serviço</a>
          <a href="/pesquisarOrdensServico">Consultar e editar ordens de serviço</a>
        </div>
        <button class="dropdown-btn">Ordens preventivas
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/ordemPreventivaCriar">Criar ordem preventiva</a>
          <a href="/consultarPreventivas">Consultar e editar ordens preventivas</a>
        </div>
        <button class="dropdown-btn">Máquinas
          <i class="fa fa-caret-down"></i>

        </button>
        <div class="dropdown-container">
          <a href="/cadastrarMaquinas">Cadastrar máquinas</a>
          <a href="/consultarMaquinas">Consultar e editar máquinas</a>
          <a href="/excluirMaquinas">Excluir máquinas</a>
          <a href="/processoMaquinas">Dados de processo</a>
        </div>
        <button class="dropdown-btn">Usuários
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/cadastrarUsuarioInternal">Cadastrar usuários</a>
          <a href="/consultarEditarUsuarios">Consultar e editar usuários</a>
        </div>
        <button class="dropdown-btn">Inventário
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
          <a href="/inventario">Cadastrar Itens</a>
          <a href="/consultarEditarItensInventario">Consultar e editar Itens</a>
        </div>
        <a href="/contato">Contate-nos!</a>
      </div>
    </div>
    <script>
      /* função para ativar os botões da barra lateral, dropdownbtn*/

      var dropdown = document.getElementsByClassName("dropdown-btn");
      var i;
      for (i = 0; i < dropdown.length; i++) {
        dropdown[i].addEventListener("click", function() {
          this.classList.toggle("active");
          var dropdownContent = this.nextElementSibling;
          if (dropdownContent.style.display === "block") {
            dropdownContent.style.display = "none";
          } else {
            dropdownContent.style.display = "block";
          }
        });
      }
    </script>

    <div class="conteudo">
      <div class="conteudoEsquerdoResultadoOrdens">
        <form name="resultadoOrdens" action="/resultadoOrdens" method="post">
          <div class="mb-3">
            <label for="numeroOrdem" class="form-label" id="tituloOrdemServico">Número da ordem de serviço</label>
            <input type="number" class="form-control" name="numeroOrdem" id="tituloOrdem" maxlength="100" required>
            <div id="ordemHelp" class="form-text">Insira o número da ordem de serviço</div>
          </div>

          <div class="mb-3">
            <label for="servicoOrdem" class="form-label" id="servicoOrdem">Descrição do serviço realizado</label>
            <textarea class="form-control" id="servicoOrdem" name="servicoOrdem" rows="3" maxlength="500" ></textarea>
            <div id="ordemHelp" class="form-text">Insira a descrição do serviço realizado</div>
          </div>

          <div class="mb-3">
            <label for="tecnicoOrdem" class="form-label">Responsável pela ordem</label>

            <select class="form-select" name="responsavelOrdem">
              <option value = "" selected>Selecione nome do responsável pela OS</option>
              <option value="Filipe Cordella">Filipe Cordella</option>

            </select>
            <div id="responsavelOrdemHelp" class="form-text">Selecione o nome do responsável da OS.</div>
          </div>


          <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar</button>
          <a href="pesquisarOrdensServico" class="btn btn-primary"><i class="fas fa-long-arrow-alt-left"></i> Voltar</a>


      </div>

      <div class="conteudoDireitoResultadoOrdens">

        <div class="mb-3">

          <label for="statusOrdem" class="form-label">Status da ordem</label>
          <select class="form-select" name="statusOrdem">
            <option value= "" selected>Selecione o status da ordem</option>
            <option value="Aberta">Aberta</option>
            <option value="Em andamento">Em andamento</option>
            <option value="Fechada">Fechada</option>

          </select>
          <div id="setorOrdemHelp" class="form-text">Selecione o status da OS.</div>

        </div>

        <div class="mb-3">

          <label for="horaFechamento" class="form-label">Hora de registro</label>
          <input type="time" class="form-control" name="horaFechamento" id="horaFechamento">
          <div id="dataOrdemHelp" class="form-text">Insira a hora do registro da atualização ordem de serviço.</div>

        </div>

        <div class="mb-3">

          <label for="dataOrdemFechamento" class="form-label">Data de fechamento</label>
          <input type="date" class="form-control" name="dataOrdemFechamento" id="dataOrdemFechamento">
          <div id="dataOrdemHelp" class="form-text">Insira a data de fechamento da ordem de serviço.</div>

        </div>

        <div class="form-group">
          <div class="mb-3">
            <label class="form-label">Tipo de ordem: </label>
          </div>

          <table class="table table-borderless">

              <tr>
                <td >
                  <div class="form-check">
                    <input class="form-check-input" type="radio" value="preventiva" name="flexRadioDefault" id="ordemPreventiva">
                    <label class="form-check-label" for="ordemPreventiva">
                      Preventiva
                    </label>
                  </div>
                </td>

                <td >
                  <div class="form-check">
                    <input class="form-check-input" type="radio" value="corretiva" name="flexRadioDefault" id="ordemCorretiva">
                    <label class="form-check-label" for="ordemCorretiva">
                      Corretiva
                    </label>
                  </div>
                </td>
                <td >
                  <div class="form-check">
                    <input class="form-check-input" type="radio" value="emergencial" name="flexRadioDefault" id="ordemEmergencial" >
                    <label class="form-check-label" for="ordemEmergencial">
                      Emergencial
                    </label>
                  </div>
                </td>
                <td >
                  <div class="form-check">
                    <input class="form-check-input" type="radio" value="verificacao" name="flexRadioDefault" id="ordemVerificacao" >
                    <label class="form-check-label" for="ordemVerificacao">
                      Verificação
                    </label>
                  </div>
                </td>
              </tr>

          </table>

        </div>
      </div>

      <div class="conteudoBottonResultadoOrdens">

        <table class="table">
    <thead>
      <tr>
        <th scope="col">Número</th>
        <th scope="col">Titulo</th>
        <th scope="col">Máquina</th>
        <th scope="col">Data de abertura</th>
        <th scope="col">Data de fechamento</th>
        <th scope="col">Responsável</th>
        <th scope="col">Tipo de ordem</th>
        <th scope="col">Status</th>

      </tr>
    </thead>

    <tbody>
      <% listaDeOrdens.forEach(function(ordem) { %>
      <tr>
        <td><%= ordem.numeroOrdem %></td>
        <td><%= ordem.tituloOrdem %></td>
        <td><%= ordem.maquinaOrdem %></td>
        <td><%= ordem.dataInicial.toDateString() %></td>
        <td><%= ordem.dataFinal %></td>
        <td><%= ordem.responsavel %></td>
        <td><%= ordem.tipoOrdem %></td>
        <td><%= ordem.status %></td>
      </tr>
<%  }); %>
    </tbody>

  </table>


      </div>
    </div>
    </form>

    <script src="JS/inventarioFuncoes.js" type="text/javascript"></script>

</body>

</html>
